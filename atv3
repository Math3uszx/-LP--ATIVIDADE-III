#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    int i;
    char nome [6][300];
    int telefone[6];
    int codigo= 0;
    do{
        printf("Deseja adiciona uma pessoa?\n");
        printf("Caso sim-Digite 1 \n");
        printf("Caso não-Digite 2 \n");
        printf("RESPOSTA:\n");
        scanf("%d",&codigo);
        switch(codigo){
            case 1:
            setbuf(stdin , 0);
            printf("\n");
        printf("Nome:\n");
        scanf("%s",&nome[i]);
        
        printf("numero de telefone:\n");
        scanf("%i",&telefone[i]);
        break;
        for(i = 0;i < 6;i++){
        case 2:
            system("cls || clear");
            
            printf("Nome: %s \n",nome[i]);
            printf("telefone: %d \n",telefone[i]);
            break;
              default:
              printf("opção inexistente \n");
        }
        setbuf(stdin , 0);
        }
        
    } while (codigo == 1 );
    
    return 0;
}
